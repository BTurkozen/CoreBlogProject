@model CommentViewModel

<div>
    <form method="post" asp-controller="Home" asp-action="Comment">
        <input asp-for="PostId" type="hidden" />
        <input asp-for="MainCommentId" type="hidden" />
        <textarea asp-for="Message" class="form-control" rows="3" placeholder="write a comment..."></textarea>
        <br>
        <button type="submit" class="btn btn-info pull-right">Submit</button>
        <div class="clearfix"></div>
    </form>
</div>

